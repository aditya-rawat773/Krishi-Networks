<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivOtherMandiImage"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="32dp"
        android:text="Km"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHindiName" />

    <TextView
        android:id="@+id/tvDistrict"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="District"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/ivOtherMandiImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHindiName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:text="State"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/ivOtherMandiImage"
        app:layout_constraintTop_toBottomOf="@+id/tvDistrict" />
    <TextView
        android:id="@+id/tvState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:text="State"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/tvHindiName"
        app:layout_constraintTop_toBottomOf="@+id/tvDistrict" />


</androidx.constraintlayout.widget.ConstraintLayout>